            <string>//check if the last tile has finished moving
if (!tilesComplete)
{
  
    if (tileSet2[6].y == room_height / 3 + 100)
    {
        tilesComplete = true;
    }
   
}

//start playing music
if (tilesComplete &amp;&amp; !sound_isplaying(Time_Flies_By))
{
    //musicPlaying = true;
    sound_volume(Time_Flies_By, 0.4);
    sound_loop(Time_Flies_By);
}


